{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AI Agent Action v1",
  "type": "object",
  "required": ["proto", "kind", "seq", "payload"],
  "properties": {
    "proto": { "type": "string", "const": "1.0" },
    "kind": { "type": "string", "const": "action" },
    "seq": { "type": "integer", "minimum": 0 },
    "timestamp": { "type": "number" },
    "payload": {
      "type": "object",
      "properties": {
        "look": {
          "type": "object",
          "properties": {
            "dYaw": { "type": "number" },
            "dPitch": { "type": "number" }
          }
        },
        "move": {
          "type": "object",
          "properties": {
            "forward": { "type": "number" },
            "strafe": { "type": "number" }
          }
        },
        "jump": { "type": "boolean" },
        "sneak": { "type": "boolean" },
        "attack": { "type": "boolean" },
        "use": { "type": "boolean" },
        "place": { "type": "boolean" },
        "select_slot": { "type": "integer", "minimum": 0, "maximum": 8 }
      },
      "additionalProperties": false
    }
  }
}
