{
    "$schema": "https://json-schema.org/draft-04/schema",
    "title": "Action",
    "description": "Actions being sent to the game client.",
    "type": "object",
    "required": ["type", "timestamp", "seq", "payload"],
    "properties": {
        "type": {"const": "action"},
        "timestamp": {"type": "number"},
        "seq": {"type": "integer", "minimum": 0},
        "schema": {"type": "string", "default": "v1"},
        "payload": {
            "type": "object",
            "required" : ["kind"],
            "properties": {
                "kind": {
                    "type": "string",
                    "enum": ["noop","move_forward","move_back","turn_left","turn_right","jump","attack"]
                },
                "args": {"type": "object", "additionalProperties": true, "default": {}}
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}