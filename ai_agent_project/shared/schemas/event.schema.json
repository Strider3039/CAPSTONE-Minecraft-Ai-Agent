{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AI Agent Event v1",
  "type": "object",
  "required": ["proto", "kind"],
  "properties": {
    "proto": { "type": "string", "const": "1.0" },
    "kind": {
      "type": "string",
      "enum": ["action_result", "bridge_health"]
    },
    "seq": { "type": "integer" },
    "action": { "type": "string" },
    "status": {
      "type": "string",
      "enum": ["success", "fail", "cooldown"]
    },
    "reason": { "type": "string" },
    "latency_ms": { "type": "integer", "minimum": 0 },
    "level": { "type": "string", "enum": ["info", "warn", "error"] },
    "detail": { "type": "string" },
    "timestamp": { "type": "number" }
  },
  "additionalProperties": false
}
